{
  "required_api_version": "^2.0.0",
  "name": "Luneta Browser Bookmark",
  "description": "Search, navigate and open browser bookmarks.",
  "developer_name": "Mateus Pitura",
  "icon": "images/logo.png",
  "options": {
    "query_debounce": 0.2
  },
  "preferences": [
    {
      "id": "kw_default",
      "type": "keyword",
      "name": "Default profile",
      "default_value": "bd",
      "description": "Keyword to search in the default profile"
    },
    {
      "id": "kw_default_path",
      "type": "input",
      "name": "Default profile path",
      "default_value": "~/.config/google-chrome/Default/",
      "description": "Path to the default profile"
    },
    {
      "id": "kw_1",
      "type": "keyword",
      "name": "Profile 1",
      "default_value": "b1",
      "description": "Keyword to search in profile 1"
    },
    {
      "id": "kw_1_path",
      "type": "input",
      "name": "Profile 1 path",
      "default_value": "~/.config/google-chrome/Profile 1/",
      "description": "Path to profile 1"
    },
    {
      "id": "kw_2",
      "type": "keyword",
      "name": "Profile 2",
      "default_value": "b2",
      "description": "Keyword to search in profile 2"
    },
    {
      "id": "kw_2_path",
      "type": "input",
      "name": "Profile 2 path",
      "default_value": "~/.config/google-chrome/Profile 2/",
      "description": "Path to profile 2"
    },
    {
      "id": "max_results",
      "type": "input",
      "name": "Items limit",
      "default_value": "10",
      "description": "The extension will show up to this number of items in the list. Leave empty for no limit"
    },
    {
      "id": "base_bookmark_path",
      "type": "select",
      "name": "Base Bookmark Path",
      "description": "Choose which base path to use",
      "default_value": "bookmark_bar",
      "options": [
        { "value": "bookmark_bar", "text": "Bookmarks Bar" },
        { "value": "other", "text": "All Bookmarks" }
      ]
    },
    {
      "id": "update_last_used",
      "type": "select",
      "name": "Update Date Last Used of Bookmarks",
      "description": "Update the date last used of bookmarks when they are opened so that recent bookmarks appear first in the results. However, this writes to the Chrome bookmarks file and can lead to issues",
      "default_value": "false",
      "options": [
        { "value": "true", "text": "True" },
        { "value": "false", "text": "False" }
      ]
    }
  ]
}
